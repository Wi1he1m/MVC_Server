<% include ../partials/header %>
    
<div class="container">
    <header class="jumbotron" style="margin-top: 30px">
        <div class="container">
            <h1>Willkommen Sie zum Yelpkaempfen!</h1>
                <p>Your fight starts here.</p>
           
            <p>Are we missing something? Add another campsite
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">HERE!</a>
            </p>
         </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.url %>">
                </div>
                <div class="caption">
                    <h4><%= campground.site %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                </p>
            </div>
    
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>