<% include ../partials/header %>

    <div class="container">
        <h1 style="text-align: center; margin: 25px">Add a new campsite!</h1>
        <div class="row">
            <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                <input class="form-control" type="text" name="campground[site]" placeholder="Name of Campsite">
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="campground[url]" placeholder="Copy, paste img URL here">
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="campground[description]" placeholder="Elaborate">
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                <a href="/campgrounds">Go back to campsites page.</a>
            </form>
            </div>
        </div>
    </div>
<% include ../partials/footer %>